<div class="container">
  <div class="row">
    <div class="col">
      <% if user_signed_in? %>
      <h1>My Events</h1>
      <% @created_events.each do |event| %>
      <p>
        <strong>Name:</strong>
        <%= event.title %>
      </p>

      <p>
        <strong>Date:</strong>
        <%= event.day %>
      </p>

      <p>
        <strong>Location:</strong>
        <%= event.address %>
      </p>
      <% end %>
    </div>
    <div class="col">
      <h4> Upcoming events to be attended</h4>
      <% @upcoming_events.each do |attend| %>
      <p>
        <strong>Name:</strong>
        <%= attend.title %>
      </p>

      <p>
        <strong>Date:</strong>
        <%= attend.day %>
      </p>

      <p>
        <strong>Location:</strong>
        <%= attend.address %>
      </p>
    <% end %>
    </div>
    <div class="col">
      <h4> Previous events attended</h4>
        <% @past_events.each do |attend| %>
        <p>
          <strong>Name:</strong>
          <%= attend.title %>
        </p>

        <p>
          <strong>Date:</strong>
          <%= attend.day %>
        </p>

        <p>
          <strong>Location:</strong>
          <%= attend.address %>
        </p>
      <% end %>

      <% end %>
    </div>
  </div>
</div>
